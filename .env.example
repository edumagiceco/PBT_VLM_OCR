# PBT VLM OCR Suite - Environment Variables

# =========================================
# Database
# =========================================
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/pbt_ocr

# =========================================
# Redis
# =========================================
REDIS_URL=redis://localhost:6379/0

# =========================================
# MinIO (Object Storage)
# =========================================
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=pbt-ocr-documents
MINIO_SECURE=false

# =========================================
# Qdrant (Vector DB)
# =========================================
QDRANT_HOST=localhost
QDRANT_PORT=6333

# =========================================
# OCR Settings
# =========================================
OCR_PRECISION_THRESHOLD=60
OCR_DEFAULT_MODE=auto
OCR_HIGH_RES_DPI=300

# =========================================
# VLM Server (for GPU-based Precision OCR)
# Reference: https://github.com/datalab-to/chandra
# =========================================
VLM_API_BASE=http://localhost:8080/v1
VLM_MODEL_NAME=chandra
VLM_MAX_TOKENS=8192
VLM_TIMEOUT=120

# =========================================
# Frontend
# =========================================
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1
